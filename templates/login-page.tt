

<div class="login-card">
    <div>Who are you?</div>
    <form method="POST" action="/goc2/login">
        <select name="login_id"  class="login-selectbox" >
            <option value="default" hidden="hidden">Choose here</option>
            [% FOR person IN people %]
                <option value="[% person.id | html %]">[% person.name | html %]</option>
            [% END %]
        </select>
        <div>
            <input type="submit" id="login-form-submit" disabled>
        </div>
        <div>
            <input type="checkbox"><span style="font-size: small">show inactive users</font>
        </div>
    </form>
</div>
